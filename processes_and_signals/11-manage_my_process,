#!/bin/bash

# 11-manage_my_process
# Manage the starting, stopping, and restarting of manage_my_process.

PID_FILE="/var/run/my_process.pid"
PROCESS_NAME="manage_my_process"

start() {
    if [ -f "$PID_FILE" ]; then
        echo "$PROCESS_NAME is already running."
    else
        ./manage_my_process &
        echo $! > $PID_FILE
        echo "$PROCESS_NAME started"
    fi
}

stop() {
    if [ -f "$PID_FILE" ]; then
        kill $(cat "$PID_FILE")
        rm -f "$PID_FILE"
        echo "$PROCESS_NAME stopped"
    else
        echo "$PROCESS_NAME is not running"
    fi
}

restart() {
    stop
    start
    echo "$PROCESS_NAME restarted"
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
esac

